<%include partials/header%>
<div class='container '>
	<header class='jumbotron'>	
		<center>
			<h1>Available sites</h1>
			<p>view the trending places near you..!!</p>
		</center>
	</header>
	<div class='row d-flex align-content-start flex-wrap'>
		<%	for(var i=0; i< sites.length; i++){	%>
				<div class='col-sm'>	
					<div class="card" style="width: 18rem;">
						<img class="card-img-top" src=<%=sites[i].image%> style='.img-thumbnail{height:200px width:200px}'	/>
						<div class="card-body">

						<h5 class="card-title">	<%= sites[i].title	%>	</h5>
							<p class='card-text'><%=sites[i].description%>
							</p>
							<a class='btn btn-primary' href='#'>Know more</a>
						</div>	
					</div>			

				</div>
		<%}%>
	</div>
	<center>
	<form class='form-group' action='/addsite' method='post'>
	<input class='form-control'	type='text' name='title' placeholder='name of the site'/>
	<input	class='form-control' type='text' name='image' placeholder='Link of the image'/>
	<input	class='form-control' type='text' name='description' placeholder='Extra description about the site'/>
	<button class='btn btn-primary btn-block'>Submit</button>

	</form>
	</center>

	<a href='/'>back to home page</a>
</div>	



<%	include partials/footer	%>